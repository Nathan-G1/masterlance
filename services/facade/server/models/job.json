{
  "name": "Job",
  "plural": "jobs",
  "base": "Model",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "title": {
      "type": "string"
    },
    "price": {
      "type": "number"
    },
    "description": {
      "type": "string"
    },
    "noOfFreelancersNeeded": {
      "type": "number"
    },
    "createdAt": {
      "type": "date"
    },
    "isApproved": {
      "type": "boolean"
    }
  },
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {
    "all": {
      "accepts": null,
      "returns": {
        "root": true,
        "description": "all jobs"
      },
      "description": "Get all jobs",
      "http": {
        "path": "/all",
        "verb": "get"
      }
    },
    "feed": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "required": true,
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "root": true,
        "description": "all jobs based on the freelancer's skills"
      },
      "description": "Get all skill-related jobs for a freelancer",
      "http": {
        "path": "/feed",
        "verb": "get"
      }
    },
    "myJobs": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "required": true,
          "http": {
            "source": "query"
          }
        }
      ],
      "returns": {
        "root": true,
        "description": "a list of all jobs created by a client"
      },
      "description": "fetch all jobs created by a client",
      "http": {
        "path": "/my-jobs",
        "verb": "get"
      }
    },
    "create": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "title",
          "type": "string",
          "required": true
        },
        {
          "arg": "price",
          "type": "number",
          "required": true
        },
        {
          "arg": "description",
          "type": "string",
          "required": true
        },
        {
          "arg": "noOfFreelancersNeeded",
          "type": "number",
          "required": true
        },
        {
          "arg": "skillsRequired",
          "type": "array",
          "required": true
        },
        {
          "arg": "duration",
          "type": "object",
          "description": "this field must contain fields 'amount'(number) and 'unit' (string). The 'unit' field can only be one of the following ['minutes', 'hours', 'days', 'weeks', 'months'] and is case-sensitive",
          "required": true
        }
      ],
      "returns": {
        "root": true,
        "description": "create a job"
      },
      "description": "Get all job",
      "http": {
        "path": "/create",
        "verb": "post"
      }
    },
    "fetchJobsBySkill": {
      "accepts": [
        {
          "arg": "skillId",
          "type": "string",
          "required": true
        }
      ],
      "returns": [
        {
          "arg": "result",
          "root": true
        }
      ],
      "description": "list jobs for a skill from all available skills (their IDs are important when posting jobs)",
      "http": [
        {
          "path": "/fetchJobsBySkill/:skillId",
          "verb": "get"
        }
      ]
    },
    "applyProposal": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "jobId",
          "type": "string",
          "required": true
        },
        {
          "arg": "body",
          "type": "string",
          "required": true
        },
        {
          "arg": "price",
          "type": "number",
          "required": true
        },
        {
          "arg": "duration",
          "type": "object",
          "required": true
        },
        {
          "arg": "numberOfMilestones",
          "type": "number",
          "required": true
        }
      ],
      "returns": {
        "root": true,
        "description": ""
      },
      "description": "helps link skill and job models from outside (swagger)",
      "http": [
        {
          "path": "/:jobId/apply",
          "verb": "post"
        }
      ]
    },
    "approveJob": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "jobId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "root": true,
        "description": ""
      },
      "description": "helps link skill and job models from outside (swagger)",
      "http": [
        {
          "path": "/:jobId/approve",
          "verb": "post"
        }
      ]
    },
    "proposals": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "jobId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "root": true,
        "description": ""
      },
      "description": "helps link skill and job models from outside (swagger)",
      "http": [
        {
          "path": "/:jobId/proposals",
          "verb": "get"
        }
      ]
    },
    "acceptProposal": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "jobId",
          "type": "string",
          "required": true
        },
        {
          "arg": "proposalId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "root": true,
        "description": ""
      },
      "description": "helps link skill and job models from outside (swagger)",
      "http": [
        {
          "path": "/:jobId/proposals/:proposalId/acceptProposal",
          "verb": "post"
        }
      ]
    },
    "contracts": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "jobId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "root": true,
        "description": ""
      },
      "description": "helps link skill and job models from outside (swagger)",
      "http": [
        {
          "path": "/:jobId/contracts",
          "verb": "get"
        }
      ]
    },
    "reviews": {
      "accepts": [
        {
          "arg": "jobId",
          "type": "string",
          "required": true
        }
      ],
      "returns": {
        "root": true,
        "description": "reviews of a job instance"
      },
      "description": "an API endpoint that returns array of review objects associated with a given job",
      "http": [
        {
          "path": "/:jobId/reviews",
          "verb": "get"
        }
      ]
    }, 
    "reviewJob": {
      "accepts": [
        {
          "arg": "access_token",
          "type": "string",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "jobId",
          "type": "string",
          "required": true
        },
        {
          "arg": "rate",
          "type": "number",
          "required": true
        },
        {
          "arg": "comment",
          "type": "string"
        }
      ],
      "returns": {
        "root": true,
        "description": "the newly created review object"
      },
      "description": "helps create review for job model instances",
      "http": [
        {
          "path": "/:jobId/review",
          "verb": "post"
        }
      ]
    }
  }
}